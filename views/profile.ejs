<%- include('partials/header') %>
<div class="container-fluid dash-head">
    <nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color: #fecea8;">
        <a class="navbar-brand logo" href="/dashboard">Instagram</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">

                <a class="nav-item nav-link" href="/dashboard">Home</a>
                <a class="nav-item nav-link active" href="#">Profile<span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="/upload">Upload</a>
                <a class="nav-item nav-link" href="/logout" role="button">Logout</a>




            </div>
        </div>
    </nav>
</div>
<hr>
<div class="container-fluid bio">
    <div class="row">
        <div class="col-4 dp-row">
            <img src="./uploads/<%= dp %>" class="dp" alt="">
        </div>
        <div class="col-8 pro-name-div">
          <strong><h1 class="pro-name"><%= name %></h1></strong>
            <h5 class="pro-bio"><%= bio %></h5>
            <div class="dropdown pro-name">
                <button class="btn btn-outline-dark btn-sm">Edit Profile</button>
                <div class="dropdown-content">
                    <a href="/update/profile-pic">Edit Profile Pic</a>
                    <a href="/update/bio">Edit Bio</a>
            
                </div>
            </div>
            
            <button type="button" class="btn btn-sm follower-button" style="margin-left: 1.25rem;margin-top: 2rem;" data-toggle="modal" data-target=".bd-example-modal-sm">
                <strong><%=followList.length%> Followers</strong>
            </button>
            
            <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content" style="background-color: #fecea8;">
                  <% followList.slice().reverse().forEach(function(follower){ %>
                      
                    <a href="/user/<%= follower.followerUserId %>" class="dash-feed-name"><div class="feed-name" style="padding: 0.3rem;"><img src="../uploads/<%=follower.followerDP%>" class="feed-dp-modal"
                            alt=""> <%=follower.followerUserName%></div> </a> 
                        
                        
                    
                <%  })  %>
                </div>
                    
                </div>
            </div>
            <button type="button" class="btn btn-sm follower-button" style="margin-left: 1.25rem;margin-top: 2rem;"
                data-toggle="modal" data-target=".bd-example-modal-sm1">
                <strong><%=followingList.length%> Following</strong>
            </button>
            <div class="modal fade bd-example-modal-sm1" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content" style="background-color: #fecea8;">
                    <% followingList.slice().reverse().forEach(function(following){ %>
                    
                        <a href="/user/<%= following.followingUserId %>" class="dash-feed-name">
                            <div class="feed-name" style="padding: 0.3rem;"><img src="../uploads/<%=following.followingDP%>"
                                    class="feed-dp-modal" alt=""> <%=following.followingUserName%></div>
                        </a>
            
            
                    
                    <%  })  %>
                </div>
            
                </div>
            </div>

            
            
            
        </div>
 
    </div>
   
    


</div>
<div class="container photo-area ">
    <div class="row column-area">
        
    
        <%  userPosts.slice().reverse().forEach(function(userPost){ %>
            <div class="col-4 column post-tile">
                <a href="/posts/<%=userPost._id%>"><img src="./uploads/<%=userPost.img%>" class="profile-photo" alt=""></a>
            
            </div>
        
        <% }) %>
    
   
    
    </div>
</div>






<%- include('partials/footer') %>